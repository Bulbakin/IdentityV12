@page
@model DeactivateUser
@{
    ViewData["Title"] = "Deactivate Account";
    ViewData["ActivePage"] = ManageNavPages.Deactivate;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
    <div>
        <p>Deactivating your accout removes your accounts roles</p>
        <p>
            <a id="Deactivate" asp-page="@Model.DeactivateAccount()" class="btn btn-primary">Deactivate</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}